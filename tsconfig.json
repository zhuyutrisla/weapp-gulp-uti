{
  "compilerOptions": {
    "strictNullChecks": true,
    "noImplicitAny": true,
    "module": "CommonJS",
    "target": "ES5",
    "allowJs": false,
    "experimentalDecorators": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "alwaysStrict": true,
    "inlineSourceMap": false,
    "inlineSources": false,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true,
    "removeComments": true,
    "pretty": true,
    "strictPropertyInitialization": true,
    "typeRoots": ["./typings"],
    "lib": ["es5", "es2015", "dom", "scripthost"]
  },
  "include": [
    "src/**/*.ts",
    "typings"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
